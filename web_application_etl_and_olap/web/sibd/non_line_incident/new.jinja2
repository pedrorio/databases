{% extends "common/layout.jinja2" %}
{% set website_root = website_root %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>

    <form action="create.cgi" method="post">
        <p>Instant: <input type="text" name="instant"/></p>
        <p>ID: <input type="text" name="id"/></p>
        <p>Description: <input type="text" name="description"/></p>
        <p>Severity: <input type="text" name="severity"/></p>
        <input type="submit" value="Submit"/>
    </form>

    <a href="index.cgi">Go back</a>
{% endblock %}